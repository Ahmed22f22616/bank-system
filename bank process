- the banke options

int i;
String option;
for (i = 1; i <= 3; i++) {
    option = String.valueOf(i);
    switch (option) {
        case "1":
            System.out.println("Balance checked.");
        
        case "3":  
            System.out.println("Money transferred.");
        
        default:
            System.out.println("Invalid option.");
    }
}
System.out.println("All operations done.");
